generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String?
  provider     String
  providerId   String
  name         String
  phoneNumber  String
  createdAt    DateTime @default(now())
  refreshToken String?

  pets Pet[]

  @@unique([provider, providerId])
}

model Pet {
  id                           String    @id @default(uuid())
  type                         String
  name                         String
  gender                       String
  breed                        String?
  birthday                     DateTime  @db.Date
  weight                       Float
  neutered                     Boolean
  rabiesVaccinationDate        DateTime? @db.Date
  comprehensiveVaccinationDate DateTime? @db.Date
  covidVaccinationDate         DateTime? @db.Date
  kennelCoughVaccinationDate   DateTime? @db.Date
  heartwormVaccinationDate     DateTime? @db.Date
  externalParasiteVaccination  DateTime? @db.Date
  description                  String
  image                        String

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
}
